<link rel="stylesheet" href="./css/style.css" type="text/css" media="all">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<%- include('../partials/header2') %>
    <div class="main">
        <div class="customer-list">
            <h1>Edit Customers Added By You</h1>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Email</th>
                        <th>City</th>
                        <th>Edit</th>
                        <th>Unique Id</th>
                    </tr>
                </thead>
                <tbody>
                    <% customers.forEach(customer=> { %>
                        <tr ('<%=customer.name %>', '<%= customer.contact %>', '<%= customer.email %>', '<%=
                                        customer.city %>')">
                                        <td>
                                            <%= customer.name %>
                                        </td>
                                        <td>
                                            <%= customer.contact %>
                                        </td>
                                        <td>
                                            <%= customer.email %>
                                        </td>
                                        <td>
                                            <%= customer.city %>
                                        </td>

                                        <td><button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal" 
                                            onclick="fillModal('<%= customer.name %>', '<%= customer.contact %>', '<%= customer.email %>', '<%= customer.city %>', '<%= customer.id %>')">
                                            EDIT
                                        </button>
                                        </td>
                                        <td>
                                            <%= customer.id %>
                                        </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

            <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal Title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/updateCustomer" method="POST">
                                <label for="customerId">ID</label>
                                <input type="text" name="customerId" id="customerId"> <br>
                        
                                <label for="name">Enter Name (Leave Empty If Do Not Want To Change)</label> <br>
                                <input type="text" name="name" id="name"><br><br>
                        
                                <label for="contact">Enter Contact no (Leave Empty If Do Not Want To Change)</label> <br>
                                <input type="text" name="contact" id="contact"><br><br>
                        
                                <label for="email">Enter Email (Leave Empty If Do Not Want To Change)</label> <br>
                                <input type="text" name="email" id="email"><br><br>
                        
                                <label for="city">Enter City (Leave Empty If Do Not Want To Change)</label> <br>
                                <input type="text" name="city" id="city"><br><br>
                        
                                <input class="btn btn-primary" type="submit" value="Update Your Information">
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
            <a href="/welcome">HOME PAGE</a>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

        <script>
            // Function to fill modal fields with customer data
            function fillModal(name, contact, email, city, id) {
                // Fill form fields with customer data
                document.getElementById('customerId').value = id;
                document.getElementById('name').value = name;
                document.getElementById('contact').value = contact;
                document.getElementById('email').value = email;
                document.getElementById('city').value = city;
            }
        </script>