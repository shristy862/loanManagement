    <title>testing</title>
</head>
<body>
    <form id="myForm">
        <input type="text" name="name" id="name" class="n" placeholder="Enter Name"><br><br>
        <input type="text" name="email" id="email" class="e" placeholder="Enter Email"><br><br>
        <input type="button" value="Submit Form" onclick="test()">
    </form>
