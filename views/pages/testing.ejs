            function test(){

                let a = $(".n").val();
                let b = $(".e").val();

                $.ajax({
                    url: '/success',
                    method: 'POST',
                    data: {"name": a, "email": b},
                    success: function() {
                        alert('Data sent successfully');
                    },
                    error: function(error) {
                        alert('Error occurred while sending data');
                        console.log(error);
                    }
                });
            };
    </script>
</body>
