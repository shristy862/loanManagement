    <script>
        // Function to fetch and update the customer count
        function updateCustomerCount() {
            fetch('/customerCount')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('customerCount').textContent = `Total Customers: ${data.count}`;
                })
                .catch(error => console.error('Error fetching customer count:', error));
        }

        // Initial call to fetch and display the customer count
        updateCustomerCount();

        // Periodically update the customer count (every 5 seconds)
        setInterval(updateCustomerCount, 5000); // Adjust interval as needed
    </script>